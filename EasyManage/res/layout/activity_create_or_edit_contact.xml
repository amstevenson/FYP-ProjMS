<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dp"
	    android:background="@drawable/style_activity_background_gradient" >
    
		<TextView
		    android:id="@+id/txtCreateContactsUserHelp"
		    android:paddingLeft="10dp"
	   		android:paddingRight="10dp"
		    android:paddingBottom="50dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/create_contact_summary"
		    android:textSize="16sp" 
		    android:textColor="#FFF"/>
	
	   	 <EditText
	   	     android:id="@+id/editCreateContactEmail"
	   	     android:layout_width="50dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignLeft="@+id/txtCreateContactEmail"
	   	     android:layout_alignRight="@+id/editCreateContactName"
	   	     android:layout_below="@+id/txtCreateContactEmail"
	   	     android:layout_marginTop="5dp"
	   	     android:background="#FFF"
	   	     android:ems="10"
	   	     android:gravity="left|center"
	   	     android:hint="@string/create_contact_edit_email"
	   	     android:inputType="textEmailAddress"
	   	     android:maxLength="50"
	   	     android:paddingBottom="15dp"
	   	     android:paddingLeft="10dp"
	   	     android:paddingRight="20dp"
	   	     android:paddingTop="15dp"
	   	     android:singleLine="false"
	   	     android:textColor="#000"
	   	     android:textSize="13sp" />

	   	 <TextView
	   	     android:id="@+id/txtCreateContactEmail"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignLeft="@+id/editCreateContactName"
	   	     android:layout_below="@+id/editCreateContactName"
	   	     android:layout_marginTop="22dp"
	   	     android:paddingLeft="0dp"
	   	     android:paddingRight="10dp"
	   	     android:text="@string/create_contact_txt_email"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <EditText
	   	     android:id="@+id/editCreateContactName"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignLeft="@+id/txtCreateContactName"
	   	     android:layout_alignRight="@+id/txtCreateContactsUserHelp"
	   	     android:layout_below="@+id/txtCreateContactName"
	   	     android:layout_marginRight="10dp"
	   	     android:layout_marginTop="5dp"
	   	     android:background="#FFF"
	   	     android:ems="10"
	   	     android:gravity="left|center"
	   	     android:hint="@string/create_project_edit_name"
	   	     android:inputType="text"
	   	     android:maxLength="50"
	   	     android:paddingBottom="15dp"
	   	     android:paddingLeft="10dp"
	   	     android:paddingRight="20dp"
	   	     android:paddingTop="15dp"
	   	     android:textColor="#000"
	   	     android:textSize="13sp" />

	   	 <TextView
	   	     android:id="@+id/txtCreateContactNotes"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignLeft="@+id/txtCreateContactEmail"
	   	     android:layout_below="@+id/editCreateContactEmail"
	   	     android:layout_marginTop="22dp"
	   	     android:text="@string/create_contact_txt_notes"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <TextView
	   	     android:id="@+id/txtCreateContactName"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignBottom="@+id/txtCreateContactsUserHelp"
	   	     android:layout_marginLeft="10dp"
	   	     android:text="@string/create_contact_txt_name"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <Button
	   	     android:id="@+id/btnDeleteContact"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_below="@+id/btnCreateContact"
	   	     android:background="#cb293c"
	   	     android:minHeight="60dp"
	   	     android:text="@string/create_contact_delete_button"
	   	     android:textColor="#fff"
	   	     android:textSize="16sp" />

	   	 <Button
	   	     android:id="@+id/btnCreateContact"
	   	     android:layout_width="250dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_below="@+id/editCreateContactNotes"
	   	     android:layout_marginTop="22dp"
	   	     android:background="#8bc425"
	   	     android:minHeight="60dp"
	   	     android:text="@string/create_contact_btn"
	   	     android:textColor="#fff"
	   	     android:textSize="16sp" />

	   	 <EditText
	   	     android:id="@+id/editCreateContactNotes"
	   	     android:layout_width="50dp"
	   	     android:layout_height="150dp"
	   	     android:layout_alignLeft="@+id/txtCreateContactNotes"
	   	     android:layout_alignRight="@+id/editCreateContactEmail"
	   	     android:layout_below="@+id/txtCreateContactNotes"
	   	     android:layout_marginTop="5dp"
	   	     android:background="#FFF"
	   	     android:ems="10"
	   	     android:gravity="top|center|left"
	   	     android:hint="@string/create_contact_edit_notes"
	   	     android:inputType="textMultiLine"
	   	     android:maxLength="200"
	   	     android:maxLines="15"
	   	     android:paddingBottom="15dp"
	   	     android:paddingLeft="10dp"
	   	     android:paddingRight="10dp"
	   	     android:paddingTop="15dp"
	   	     android:singleLine="false"
	   	     android:textColor="#000"
	   	     android:textSize="13sp" />

	</RelativeLayout>
</ScrollView>


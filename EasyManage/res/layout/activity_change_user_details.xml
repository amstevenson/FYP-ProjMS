<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="604dp"
	    android:background="@drawable/style_activity_background_gradient"
	    android:paddingTop="20dp" >
    
	    <!--  Description -->

		<TextView
		    android:id="@+id/txtRegisterDescription"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingBottom="50dp"
		    android:paddingLeft="5dp"
		    android:text="@string/change_user_details_description"
		    android:textColor="#FFF"
		    android:textSize="16sp" />
	
		<!-- Forename -->

	   	 <!--  Change the image of the user; requires selection of Circular Image View -->

	   	 <!--  The new surname -->

	   	 <!--  Change the details of the user -->
	     
	   	<!--  Register account  -->

	   	 <TextView
	   	     android:id="@+id/txtRegisterUserImage"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignBaseline="@+id/btnRegisterChangeUserImage"
	   	     android:layout_alignBottom="@+id/btnRegisterChangeUserImage"
	   	     android:layout_alignLeft="@+id/txtRegisterSurname"
	   	     android:text="@string/register_lbl_picture"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <Button
	   	     android:id="@+id/btnRegisterSubmit"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_below="@+id/btnRegisterChangeUserImage"
	   	     android:layout_marginTop="96dp"
	   	     android:background="#8bc435"
	   	     android:text="@string/btn_change_user_details"
	   	     android:textColor="#fff"
	   	     android:textSize="16sp" />

	   	 <EditText
	   	     android:id="@+id/editRegisterSurname"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_below="@+id/txtRegisterSurname"
	   	     android:layout_marginLeft="10dp"
	   	     android:layout_marginRight="10dp"
	   	     android:layout_marginTop="5dp"
	   	     android:background="#FFF"
	   	     android:ems="10"
	   	     android:gravity="left"
	   	     android:hint="@string/register_edit_surname"
	   	     android:inputType="textPersonName"
	   	     android:maxLength="30"
	   	     android:paddingBottom="15dp"
	   	     android:paddingLeft="5dp"
	   	     android:paddingRight="5dp"
	   	     android:paddingTop="15dp"
	   	     android:textColor="#000"
	   	     android:textSize="13sp" />

	   	 <TextView
	   	     android:id="@+id/txtRegisterForename"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignBottom="@+id/txtRegisterDescription"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_marginLeft="10dp"
	   	     android:text="@string/register_lbl_forename"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <TextView
	   	     android:id="@+id/txtRegisterSurname"
	   	     android:layout_width="wrap_content"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_below="@+id/editRegisterForename"
	   	     android:layout_marginLeft="10dp"
	   	     android:layout_marginTop="22dp"
	   	     android:text="@string/register_lbl_surname"
	   	     android:textColor="#fff"
	   	     android:textSize="14sp" />

	   	 <EditText
	   	     android:id="@+id/editRegisterForename"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentLeft="true"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_below="@+id/txtRegisterDescription"
	   	     android:layout_marginLeft="10dp"
	   	     android:layout_marginRight="10dp"
	   	     android:layout_marginTop="5dp"
	   	     android:background="#FFF"
	   	     android:ems="10"
	   	     android:gravity="left"
	   	     android:hint="@string/register_edit_forename"
	   	     android:inputType="textPersonName"
	   	     android:maxLength="30"
	   	     android:paddingBottom="15dp"
	   	     android:paddingLeft="5dp"
	   	     android:paddingRight="5dp"
	   	     android:paddingTop="15dp"
	   	     android:textColor="#000"
	   	     android:textSize="13sp" />

	   	 <Button
	   	     android:id="@+id/btnRegisterChangeUserImage"
	   	     android:layout_width="200dp"
	   	     android:layout_height="wrap_content"
	   	     android:layout_alignParentRight="true"
	   	     android:layout_alignTop="@+id/imgviewUserImage"
	   	     android:layout_marginLeft="10dp"
	   	     android:layout_marginRight="10dp"
	   	     android:layout_toRightOf="@+id/imgviewUserImage"
	   	     android:background="#044870"
	   	     android:text="@string/register_btn_picture"
	   	     android:textColor="#fff"
	   	     android:textSize="16sp" />

	   	 <com.easymanage.utilities.CircularImageView
	   	     android:id="@+id/imgviewUserImage"
	   	     android:layout_width="60dp"
	   	     android:layout_height="60dp"
	   	     android:layout_below="@+id/editRegisterSurname"
	   	     android:layout_marginLeft="26dp"
	   	     android:layout_marginTop="66dp"
	   	     android:layout_toRightOf="@+id/txtRegisterUserImage"
	   	     android:contentDescription="@string/dashboard_user_image"
	   	     android:src="@drawable/icon_person" />
 
	</RelativeLayout>
</ScrollView>


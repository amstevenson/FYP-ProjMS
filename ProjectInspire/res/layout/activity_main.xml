<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/ProjectInspire.theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_activity_background_gradient"
    tools:context="com.projectinspire.activities.MainActivity"
    tools:ignore="MergeRootFrame" >

    <!-- Image view for the Project Inspire icon -->

    <ImageView
        android:id="@+id/projectInspireIconImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:contentDescription="@string/hello_world" />
    
    <!--Login -->
    
    <!-- Register -->
    
    <Button
        android:id="@+id/btnMainLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectInspireIconImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#0c4661"
        android:gravity="center"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:text="@string/btn_login"
        android:textSize="13sp" />
    
    <TextView
        android:id="@+id/txtMainSignup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/btnMainLogin"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:text="@string/txt_signup"
        android:textColor="#fff"
        android:textSize="13sp" />

    
</RelativeLayout>